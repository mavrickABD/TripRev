<% include ../partials/header.ejs %>
<div class="container" style="text-align:center;">
	<h2 class="white-text">Create New Hotels</h2>
	<form action="/campground" method="post" style="width:30%; margin:25px auto;">
		<div class="form-group" >
	    <input type="text" name="campname" class="form-control" placeholder="name" required>
	  	</div>

	  	<div class="form-group">
	    <input type="text" name="imageurl" class="form-control" placeholder="image path" required>
	  	</div>

	  	<div class="form-group" >
	    <input type="number" name="price" class="form-control" placeholder="price" min="100" step="5" required>
	  	</div>

	  	<div class="form-group">
	    <textarea name="description" class="form-control" placeholder="discription" required></textarea>
	  	</div>

	  	<div class="form-group">
    	<input class="form-control" type="text" name="location" id="location" placeholder="location" required>
		</div>

	  	<div class="form-group">
	    <input type="submit" class="btn btn-primary btn-block" >
	  	</div>
	</form>
	<a href="/campground">Go Back!</a>
</div>



