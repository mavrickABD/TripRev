<% include ../partials/header %>

<style>
    .listText{
        color: rgba(255,255,255,.5);
    }
 
</style>

<div class="row container">
    <div class="col-md-4">
        <div class="card " style="width: 12rem; height: 20rem">
            <img class="card-img-top" src="<%= user.avatar %>" alt="/assests/default_avatar.png">
            <div class="card-body">
               
                    <div class="card-title">
                        <h5 style="display:inline;"><%= user.firstName %> <%= user.lastName%></h5>
                    </div>
                    <div class="card-text">
                        username:<i> <%=user.username%> </i>
                    </div>
                    <a href="/user/<%=user._id%>/edit" style=" float:right; " class="btn btn-outline-warning btn-sm">Edit</a>

            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card card-body bg-light" >
            <div id="listText"><h3 style="text-align: center; padding-bottom: 1vh; color: rgba(255,255,255,.5)";>To Visit List</h3></div>
            <% if(user.campgrounds.length==0){%>
                <div id="listText"><h5 style="text-align:center; font-weight:normal;  color: rgba(255,255,255,.5);"><i>No to visit Hotels yet.</i></h5></div>
            <% } else{ %>
                <% user.campgrounds.forEach(function(camp){ %>
                    <div class="row container">
                        <div class="col-sm-12">
                                <div>
                                    <img  class="img-thumbnail " style="width: 3rem; height: 3rem ; padding: 0; border: none;" src="<%= camp.image %>" >
                                    <a style="font-size: x-large; margin-left: 1em" href="/campground/<%= camp._id %>"><i><%= camp.name %></i></a> 
                                    <span style="float: right; font-weight: 30; font-size: medium; padding-top: .5rem; color: rgba(255,255,255,.5);">Rs.<%= camp.price%>/Night</span>   
                                </div>
                                <hr>
                        </div>
                    </div>
                <% }) %> 
            <% } %>    
        </div>
    </div>
</div>

<% include ../partials/footer %>